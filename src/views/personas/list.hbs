<div class="container">
    <div class="row mt-5">
        {{#if personas}}
            <table class="table " style="">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">nombre</th>
                        <th scope="col">apellido</th>
                        <th scope="col">edad</th>
                        <th scope="col">acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{lastname}}</td>
                            <td>{{age}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning"><i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}} 
                </tbody>
                <tfoot>
                    <tr class="table-dark text-center">
                        <td colspan="4"> Registro de personas</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear una Persona</h3>
                </div>
                <div class="card-body">
                    <p> Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>